EVALFILE "sparrowfile-install-spark";

package-install "openssh-server";

package-install "systemd";

service-start "ssh";

user "spark";

directory "/home/spark/.ssh", %(
  mode  => 700,
  owner => "spark",
  group => "spark"
);

file '/home/spark/.ssh/authorized_keys', %(
  owner   => "spark",
  group   => "spark",
  mode    => 640,
  content => ( slurp 'id_rsa.pub' )
);




